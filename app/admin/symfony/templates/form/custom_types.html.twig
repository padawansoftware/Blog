{%- block vich_image_widget -%}
    <div class="image-upload">
        {{- form_widget(form.file) -}}
        {%- if image_uri -%}
            <img src="{{ image_uri }}">
        {% else %}
            <img src="{{ asset('assets/images/select-image.png') }}">
        {% endif %}
    </div>
{%- endblock -%}

{%- block form_row -%}
    <div class="group">
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        {{- form_help(form) -}}
    </div>
{%- endblock form_row -%}
